<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppTheme" parent="Theme.AppCompat">
		<item name="android:itemBackground">@color/app_background_color</item>
		<item name="android:itemTextAppearance">@style/MyActionBar.MenuTextStyle</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="ButtonStyle" parent="android:Widget.Button.Small">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/btn_txt_color</item>
		<item name="android:background">@drawable/btn_border</item>
		<item name="android:minHeight">0dp</item>
		<item name="android:minWidth">0dp</item>
		<item name="android:paddingLeft">@dimen/margin_long</item>
		<item name="android:paddingRight">@dimen/margin_long</item>
		<item name="android:paddingTop">@dimen/margin_small</item>
		<item name="android:paddingBottom">@dimen/margin_small</item>
		<item name="android:windowNoTitle">true</item>
	</style>

	<style name="MyActionBar.MenuTextStyle"
		parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textStyle">normal</item>
		<item name="android:textSize">16dp</item>
		<item name="android:gravity">center</item>
	</style>

</resources>